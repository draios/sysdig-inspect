{{#link-to "index" class="wsd-capture-header__logo"}}
    <img src="{{rootURL}}assets/images/sysdig-inspect-logo-white-155x24.svg">
{{/link-to}}
<div class="wsd-capture-header__title" {{action "openFileBrowser"}}>
    {{#unless isEditingFilePath}}
        {{filePath}}
    {{else}}
        {{sd-input
            name="file-path"
            value=filePath
            placeholder="Capture file path"
            isAcceptChangeMode=true
            changeValue=(action "openFile")
            cancel=(action "cancelFilePathEditing")
        }}
    {{/unless}}
</div>
<div class="wsd-capture-header__button">
    {{#sd-button
        iconName="file_white"
        color="light"
        title="Open capture"
        click=(action "openFileBrowser")
    }}
        Open
    {{/sd-button}}
</div>
